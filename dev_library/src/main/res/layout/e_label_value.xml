<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/e_height_45"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/e_margin_small"
            android:layout_marginRight="@dimen/e_margin_small"
            android:src="@mipmap/pe"/>

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/e_margin_small"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/e_next"
            android:textColor="@color/e_black"
            android:textSize="@dimen/e_font_16"
            />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/e_margin_small"
            android:layout_weight="0.5"
            android:drawablePadding="@dimen/e_padding_smaller"
            android:drawableRight="@mipmap/e_arrow"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="@string/e_next"
            android:textColor="@color/e_gray"
            android:textSize="13sp"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_line"
        android:layout_gravity="bottom"
        android:background="@color/e_gray"/>

</FrameLayout>