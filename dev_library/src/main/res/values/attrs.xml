<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
            <enum name="oval" value="3" />
        </attr>
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="round_radius" format="dimension" />
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="only_draw_border" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ETitleBar">

        <attr name="title_text" format="string"/>
        <attr name="forward_text" format="string"/>
        <attr name="backward_text" format="string"/>

        <attr name="backward_def_finish" format="boolean"/>
        <attr name="backward_visible" format="boolean"/>
        <attr name="backward_iv_visible" format="boolean"/>
        <attr name="forward_visible" format="boolean"/>
        <attr name="forward_iv_visible" format="boolean"/>

        <attr name="backward_icon" format="reference"/>
        <attr name="forward_icon" format="reference"/>

        <attr name="title_color" format="color"/>
        <attr name="backward_color" format="color"/>
        <attr name="forward_color" format="color"/>
        <attr name="title_bar_color" format="color"/>

    </declare-styleable>

    <declare-styleable name="ELabelValueView">

        <attr name="divide_color" format="color"/>
        <attr name="divide_margin_left" format="dimension"/>
        <attr name="divide_visible" format="boolean"/>

        <attr name="icon_width" format="dimension"/>
        <attr name="icon_height" format="dimension"/>
        <attr name="icon_margin" format="dimension"/>
        <attr name="icon_visible" format="boolean"/>
        <attr name="icon_drawable" format="reference"/>

        <attr name="label_text" format="string"/>
        <attr name="label_text_color" format="color"/>
        <attr name="label_text_size" format="dimension"/>
        <attr name="label_width" format="dimension"/>
        <attr name="label_margin_left" format="dimension"/>

        <attr name="value_text" format="string"/>
        <attr name="value_text_color" format="color"/>
        <attr name="value_text_size" format="dimension"/>
        <attr name="value_padding_right" format="dimension"/>
        <attr name="value_drawable" format="reference"/>
        <attr name="value_drawable_visible" format="boolean"/>

        <attr name="padding_top" format="dimension"/>
        <attr name="padding_bottom" format="dimension"/>

    </declare-styleable>

</resources>